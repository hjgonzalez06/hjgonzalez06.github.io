---
import "~/styles/tailwind.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Hiram Gonzalez's personal website." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative">
		<main class="w-full h-full p-4">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--white: #fefefe;
		--black: #25252b;
		--royal-blue: #4366e1;
		--mint: #21ba91;
		--cool-gray: #a9a9bc;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		min-height: 100%;
		height: 100%;
	}

	body {
		font-family: "Inter", sans-serif;
		color: var(--white);
		background-color: var(--black);
	}
</style>
