---
import ScrollButton from "./ScrollButton.astro"
import Separator from "./Separator.astro"

import BottomArrow from "~/assets/icons/bottom_arrow.svg"
---

<header
  class="min-h-screen flex flex-col justify-center items-center gap-6 lg:gap-8 p-2 m-auto relative"
>
  <div class="absolute -z-10 bg-blue-mint-gradient h-full w-full brightness-75" />
  </div>
  <h1
    class="font-rubik font-bold text-center m-0 mt-16 text-5xl lg:text-8xl"
  >
    Full-stack Web Developer
  </h1>
  <p class="text-center m-0 text-2xl lg:text-3xl font-extralight">
    Building User-Centric Next-Gen Software Solutions
  </p>
  <Separator />
  <ScrollButton
    text="Scroll down"
    href="#about"
    iconSrc={BottomArrow.src}
    class="absolute bottom-6 left-1/2 transform -translate-x-1/2"
  />
</header>
